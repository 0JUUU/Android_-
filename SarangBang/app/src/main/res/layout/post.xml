<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        tools:ignore="MissingConstraints"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/TextView_sort"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="분류"
            android:textStyle="bold" />

        <Button
            android:id="@+id/Button_picture"
            android:text="사진"
            android:layout_width="100dp"
            android:layout_height="match_parent"/>
        <Button
            android:id="@+id/Button_restaurant"
            android:text="맛집"
            android:layout_width="100dp"
            android:layout_height="match_parent"/>
        <Button
            android:id="@+id/Button_sightseeing"
            android:text="관광"
            android:layout_width="100dp"
            android:layout_height="match_parent"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <TextView
            android:id="@+id/TextView_region"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="지역"
            android:textStyle="bold" />
        <Spinner
            android:id="@+id/spinner"
            android:entries="@array/지역"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <TextView
            android:id="@+id/TextView_theme"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="테마분류\n(해시태그)"
            android:textStyle="bold" />

        <com.rey.material.widget.CheckBox
            style="@style/Material.Drawable.CheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="테마1"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <TextView
            android:id="@+id/TextView_picture"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="사진 추가"
            android:textStyle="bold" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <TextView
            android:id="@+id/TextView_title"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="제목"
            android:textStyle="bold" />
        <EditText
            android:id="@+id/EditText_title"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <TextView
            android:id="@+id/TextView_location"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="위치"
            android:textStyle="bold" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        >
        <TextView
            android:id="@+id/TextView_content"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:gravity="center|top"
            android:text="설명"
            android:textStyle="bold" />
        <EditText
            android:id="@+id/EditText_content"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:weightSum="10"
        >
        <Button
            android:id="@+id/Button_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:paddingRight="5dp"
            android:paddingLeft="5dp"
            android:gravity="center"
            android:layout_weight="5"
            android:textSize="24sp"
            android:text="등록"/>

        <Button
            android:id="@+id/Button_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:paddingRight="5dp"
            android:paddingLeft="5dp"
            android:gravity="center"
            android:layout_weight="5"
            android:textSize="24sp"
            android:textColor="@android:color/holo_blue_dark"
            android:text="취소" />

    </LinearLayout>
</LinearLayout>